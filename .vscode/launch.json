  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "EEPROM Read",
      "type": "python",
      "request": "launch",
      "program": "replifactory_ftconf.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "ftdi://ftdi:2232:1:d/2",
        "-d","-o", "-",
      ]
    },
    {
      "name": "EEPROM Write",
      "type": "python",
      "request": "launch",
      "program": "replifactory_ftconf.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "ftdi://ftdi:2232:1:d/2",
        "-i",
        "data.ini",
        "-u",
      ]
    },
    {
      "name": "EEPROM Erase",
      "type": "python",
      "request": "launch",
      "program": "replifactory_ftconf.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "ftdi://ftdi:2232:1:d/2",
        "-E",
        "-u",
      ]
    },
    {
      "name": "Vue serve",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "serve"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "replifactory",
        "FLASK_DEBUG": "1",
        "LOGGING_LEVEL": "DEBUG",
        "ENVIRONMENT": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true,
      "justMyCode": false
    }
  ]
}